 <%= form_for [:admins, @event] do |f| %>  <!--need :admins since namespaced-->
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

     <%= f.label :date_time %>
     <%= f.datetime_local_field :date_time %>     <!--can't call this datetime_field because it is a helper??-->

     <%= f.label :max_tix %>
     <%= f.text_field :max_tix %>

    <%= f.submit %>
 <% end %>

 <!--http://api.rubyonrails.org/classes/ActionView/Helpers/FormHelper.html-->